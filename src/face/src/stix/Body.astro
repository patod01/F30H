---
const {title} = Astro.props.frontmatter;
import StatBar from './StatBar.astro';
import Buttons from './Buttons.astro';
import './css/paleta.css';
import './css/Body.css';
const apiLink = import.meta.env.DEV? 'http://localhost:8080': '';
---
<html>
<head>
   <meta charset="utf-8" />
   <link rel="icon" href="/icon.png" />
   <meta name="viewport" content="width=device-width" />
   <script is:inline src="/js/a.js"></script>
   <title>F30H</title>
   <script define:vars={{apiLink}}>
      window.api_link = apiLink;
   </script>
</head>
<body x-data="{ reports: 0, discarded: 0, formatted: 0, help: false }">   
   <div>
      <h1>F30-1 Helper</h1>
      <StatBar/>
      <br>
      <Buttons />
      <div class="help" x-show="help" x-cloak x-transition.duration.150ms>
         <h2>{title}</h2>
         <div class="card">
            <slot />
         </div>
      </div>
   </div>
</body>
</html>
